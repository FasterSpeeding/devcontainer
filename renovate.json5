{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>FasterSpeeding/Piped//config/renovate.json5"],
  "mise": {
    "managerFilePatterns": ["/^artifacts/\\.config/mise/config\\.toml$/"]
  },
  "packageRules": [
    {
      // Skip trying to pin the container image refetenced in the devcontainer config
      "matchFileNames": [".devcontainer.json"],
      "enabled": false
    },
    {
      "matchFileNames": ["artifacts/config/mise/config.toml"],
      "matchPackageNames": ["java-jdk"],
      // Fixes OpenJDK compat by avoiding releases with an LTS tag in them
      "versioning": "regex:^(?<major>\\d+)?(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?([\\._+]((\\d\\.?)+)(LTS)?)?(-(.*))?$"
    }
  ]
}
